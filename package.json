{
  "name": "nftyfinance-monorepo",
  "version": "0.0.1",
  "private": "true",
  "type": "module",
  "scripts": {
    "contracts": "yarn workspace nftyfinance-contracts",
    "faucet": "yarn workspace nftyfinance-faucet",
    "subgraph": "yarn workspace nftyfinance-subgraph",
    "dapp": "yarn workspace nftyfinance-dapp-v1",
    "graph-node": "cd ../graph-node/docker && rm -rf data && docker compose down && docker compose up",
    "deploy:local": "yarn contracts deploy:local && yarn subgraph deploy:local && yarn dapp generate ",
    "build:dapp": "yarn dapp build",
    "build:faucet": "yarn faucet build"
  },
  "workspaces": [
    "contracts",
    "faucet",
    "subgraph",
    "dapp-v1"
  ],
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
