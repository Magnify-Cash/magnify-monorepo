{
  "name": "nftyfinance-contracts",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn hardhat clean && yarn hardhat compile",
    "start": "yarn hardhat node",
    "test": "yarn hardhat test",
    "deploy:local": "yarn build && yarn hardhat deploy --network localhost",
    "deploy:testnet": "yarn build && yarn hardhat deploy --network sepolia",
    "mythril": "myth analyze contracts/contracts/NFTYFinanceV1.sol  --solc-json ./solc.json",
    "slither": "yarn hardhat clean && yarn hardhat compile && slither . --checklist --show-ignored-findings"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
